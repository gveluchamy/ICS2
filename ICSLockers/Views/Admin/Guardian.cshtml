@using ICSLockers.Models
@{
    ViewData["Title"] = "Division";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid main">
    <div class="title-bar">
        <h5>Locate User Locker</h5>
    </div>
    <div class="content-wrapper">
        <div class="nominee">
            <h1>Item Add/remove person detail</h1>
            <div class="nominee-form">
                <div class="d-flex align-items-center justify-content-between mb-4  raltion-model">
                    <h5 class="col-lg-4 m-0 text-left">Guardian Name</h5>
                    <input type="text" class="form-control col-lg-7 user-name" value="">
                </div>
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h5 class="col-lg-4 m-0 text-left">Relationship</h5>
                    <div class="d-flex col-lg-7 p-0 flex-wrap justify-content-between">
                        <div class="col-lg-6">
                            <input type="radio" id="test1" name="radio-group" value="Patient" checked>
                            <label for="test1" class="patient">Patient</label>
                        </div>
                        <div class="col-lg-6">
                            <input type="radio" id="test2" name="radio-group" value="Nurse">
                            <label for="test2" class="nurse">Nurse</label>
                        </div>
                        <div class="col-lg-6">
                            <input type="radio" id="test3" name="radio-group" value="Next of kin">
                            <label for="test3" class="kin">Next of kin</label>
                        </div>
                        <div class="col-lg-6">
                            <input type="radio" id="test4" name="radio-group" value="others" class="others">
                            <label for="test4">Others</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center justify-content-between mb-4 other-relation mb-4"
                     id="other-relation">
                    <h5 class="col-lg-4 m-0 text-left">Relation</h5>
                    <input id="relation" type="text" class="form-control col-lg-7 ">
                </div>
                <div class="d-flex justify-content-center mt-5 ">
                    <button class="btn" type="submit" onclick="fnUpdateRelation()"> 
                        Add Person
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

                <script src="~/js/Staff.js"></script>