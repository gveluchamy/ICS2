<div class="modal fade admin-modal" id="UpdateLockerModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered locker-add-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center w-100" id="exampleModalLongTitle">Add Location</h5>
            </div>
            <div class="modal-body">
                <div class="col-lg-12">
                    <div class="row justify-content-center d-flex">
                        <div class="col-lg-4"><label for="Locker Unit Number">Locker Location</label></div>
                        <div class="col-lg-6">
                            <input type="text" class="form-control locker-unit" value=" Location">
                        </div>
                    </div>
                    <div class="row justify-content-center d-flex">
                        <div class="col-lg-4"><label for="Locker Unit Number">Locker Division</label></div>
                        <div class="col-lg-6">
                            <div class="quantity-field">
                                <button class="value-button decrease-button" onclick="decreaseValue(this)"
                                        title="Azalt">
                                    -
                                </button>
                                <div class="number">1</div>
                                <button class="value-button increase-button" onclick="increaseValue(this, 5)"
                                        title="Arrtır">
                                    +
                                </button>
                            </div>
                            <div class="note">
                                <p>*  Maximum 5 divisions per location</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" ononclick="fnCreateNewLocker()">Create</button>
            </div>
        </div>
    </div>
