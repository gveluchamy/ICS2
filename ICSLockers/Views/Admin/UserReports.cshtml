@using ICSLockers.Models
@model UserReportsModel

@{
    ViewData["Title"] = "Locker User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid main p-0">
    <div class="title-bar">
        <h5>User Reports</h5>
    </div>

    <div class="container user-report" id="userRepor">
        <div class="content-wrapper">
            <div class="user-table">
                <div class="tab">
                    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill"
                                    data-bs-target="#pills-home" type="button" role="tab"
                                    aria-controls="pills-home" aria-selected="false">
                                Admin
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-staff-tab"
                                    data-bs-toggle="pill" data-bs-target="#pills-staff" type="button"
                                    role="tab" aria-controls="pills-staff"
                                    aria-selected="true">
                                Staff
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill"
                                    data-bs-target="#pills-profile" type="button" role="tab"
                                    aria-controls="pills-profile" aria-selected="false">
                                User
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill"
                                    data-bs-target="#pills-contact" type="button" role="tab"
                                    aria-controls="pills-contact" aria-selected="false">
                                Session
                            </button>
                        </li>
                        
                    </ul>

                    <div class="tab-content" id="pills-tabContent">

                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel"
                             aria-labelledby="pills-home-tab">
                            <div class="col-lg-12 p-0 employee-table">
                                <button class="add-user btn btn-primary" onclick="location.href='@Url.Action("Index", "Admin")'">Create Admin</button>
                                <table id="AdminReportTable" class="table table-hover emp-table">
                                    <thead>
                                        <tr>
                                            <th>S.No</th>
                                            <th>Full Name</th>
                                            <th>Email</th>
                                            <th>Created Date</th>
                                            <th>Created Time</th>
                                            <th>Created by</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int i = 1;
                                            @foreach (ApplicationUser user in Model.Users)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@user.FullName</td>
                                                    <td>@user.Email</td>
                                                    <td>@user.CreatedOn.ToString("dd/MMM/yyyy")</td>
                                                    <td>@user.CreatedOn.ToString("hh:mm tt")</td>
                                                    <td>@user.CreatedBy</td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="tab-pane fade " id="pills-staff" role="tabpanel"
                             aria-labelledby="pills-staff-tab">
                            <div class="col-lg-12 p-0 employee-table">
                                <button class="add-user btn btn-primary" onclick="location.href='@Url.Action("Index", "Admin")'">Create Staff</button>
                                <table id="StaffReportTable" class="table table-hover emp-table">
                                    <thead>
                                        <tr>
                                            <th>S.No</th>
                                            <th>FirstName</th>
                                            <th>LastName</th>
                                            <th>Locker</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int n = 1;
                                            @foreach (ApplicationUser user in Model.Users)
                                            {
                                                <tr>
                                                    <td>@n</td>
                                                    <td>@user.FirstName</td>
                                                    <td>@user.LastName</td>
                                                    <td>@user.LockerId</td>
                                                    <td>@user.Email</td>
                                                </tr>
                                                n++;
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>

                        <div class="tab-pane fade" id="pills-profile" role="tabpanel"
                             aria-labelledby="pills-profile-tab">
                            <div class="col-lg-12 p-0 employee-table">
                                <table id="UserReportTable" class="table table-hover emp-table">
                                    <thead>
                                        <tr>
                                            <th>S.No</th>
                                            <th>FirstName</th>
                                            <th>LastName</th>
                                            <th>Locker</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int count = 1;
                                            @foreach (ApplicationUser user in Model.Users)
                                            {

                                                <tr>
                                                    <td>@count</td>
                                                    <td>@user.FirstName</td>
                                                    <td>@user.LastName</td>
                                                    <td>@user.LockerId</td>
                                                    <td>@user.Email</td>
                                                </tr>
                                                count++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="pills-contact" role="tabpanel"
                             aria-labelledby="pills-contact-tab">
                            <div class="col-lg-12 p-0 employee-table">
                                <table id="sessiontable" class="table table-hover emp-table">
                                    <thead>
                                        <tr>
                                            <th>S.No</th>
                                            <th>FirstName</th>
                                            <th>User Type</th>
                                            <th>Event Type</th>
                                            <th>Event Date</th>
                                            <th>Event Time</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                            @foreach (UserEvent Event in Model.UserEvents)
                                            {
                                                <tr>
                                                    <td>@Event.Id</td>
                                                    <td>@Event.Username</td>
                                                    <td>@Event.Role</td>
                                                    <td>@Event.EventType</td>
                                                    <td>@Event.EventTime.ToString("dd/MMM/yyyy")</td>
                                                    <td>@Event.EventTime.ToString("hh:mm tt")</td>
                                                </tr>
                                            }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/UserReports.js" defer></script>