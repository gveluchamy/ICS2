@using ICSLockers.Models
@model List<ApplicationUser>

@{
    ViewData["Title"] = "Locker User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid main p-0">
    <div class="title-bar">
        <h5>User Reports</h5>
    </div>

    <div class="container" id="userRepor">
        <div class="content-wrapper">
            <div class="user-table">
                <div class="tab">
                    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="pills-home-tab"
                                    data-bs-toggle="pill" data-bs-target="#pills-home" type="button"
                                    role="tab" aria-controls="pills-home"
                                    aria-selected="true">
                                Staff
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill"
                                    data-bs-target="#pills-profile" type="button" role="tab"
                                    aria-controls="pills-profile" aria-selected="false">
                                User
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill"
                                    data-bs-target="#pills-contact" type="button" role="tab"
                                    aria-controls="pills-contact" aria-selected="false">
                                Session
                            </button>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel"
                             aria-labelledby="pills-home-tab">
                            <div class="col-lg-12 p-0 employee-table">
                                <button class="add-user btn btn-primary">Create User</button>

                            </div>
                        </div>
                        <div class="tab-pane fade" id="pills-profile" role="tabpanel"
                             aria-labelledby="pills-profile-tab">
                            <div class="col-lg-12 p-0 employee-table">
                                <button class="add-user btn btn-primary">Create Staff</button>
                                <table id="UserReportTable" class="table table-hover emp-table">
                                    <thead>
                                        <tr>
                                            <th>S.No</th>
                                            <th>FirstName</th>
                                            <th>LastName</th>
                                            <th>Locker</th>
                                            <th>Code</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int count = 1;
                                            @foreach (ApplicationUser user in Model)
                                            {
                                                <tr>
                                                    <td>@count</td>
                                                    <td>@user.FirstName</td>
                                                    <td>@user.LastName</td>
                                                    <td>@user.LockerUnitId</td>
                                                    <td>@user.PasswordEnc</td>
                                                </tr>
                                                count++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="pills-contact" role="tabpanel"
                             aria-labelledby="pills-contact-tab">
                            <div class="col-lg-12 p-0 employee-table">
                            </div>
                        </div>
                    </div>

                </div>
            </div>            
        </div>
    </div>
</div>


<script src="~/js/UserReports.js" defer></script>